<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<Scene xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.bsu.cs222.markdownEditor.PreferenceController">
    <AnchorPane>
        <GridPane alignment="TOP_CENTER" hgap="24.0" vgap="14.0">
            <Label prefWidth="215.0" styleClass="system-h4" text="Style" GridPane.columnSpan="2" />
            <Label styleClass="system-form-label" text="Font" GridPane.rowIndex="1" />
            <ComboBox fx:id="fontComboBox" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Style Sheet" GridPane.rowIndex="2" />
            <ComboBox fx:id="styleSheetComboBox" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button onAction="#addCustomStyleSheet" mnemonicParsing="false" text="Add Custom Style Sheet" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            <padding>
                <Insets bottom="32.0" left="32.0" right="32.0" top="32.0"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints halignment="LEFT"/>
            </columnConstraints>
        </GridPane>
    </AnchorPane>
</Scene>
